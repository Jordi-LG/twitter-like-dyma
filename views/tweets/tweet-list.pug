if tweets
  each tweet in tweets
    div(class="card tweet-element")
      div(class="card-body d-flex flex-column")
        div(class="d-flex flex-row justify-content-center")
          img(width="40", height="40" src=tweet.author.avatar)
          span(class="flex-fill pl-2")=tweet.author.username
          //- toString car sinon on compare des objets
          if editable && tweet.author._id.toString() === currentUser._id.toString()
            div(class="d-flex flex-row justify-content-center")
              a(class="fas fa-edit text-success pr-2" href="/tweets/edit/" + tweet._id)
              i(class="fas fa-minus-circle text-danger pointer-cursor" tweetId = tweet._id)
        div()=tweet.content

